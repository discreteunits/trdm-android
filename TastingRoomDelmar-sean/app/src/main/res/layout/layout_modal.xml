<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/modal">

    <TextView
        android:id="@+id/modal_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="A LITTLE BIT OF STEAK HOUSE"/>

    <TextView
        android:id="@+id/modal_tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:text="A modern take on an old world classic"/>

    <ListView
        android:id="@+id/modal_listview"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/modal_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:background="@drawable/light_gray_soft_corner_button"
            android:text="Cancel"/>

        <Button
            android:id="@+id/modal_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/green_soft_corner_button"
            android:text="@string/add_to_tab"/>

    </LinearLayout>


</LinearLayout>