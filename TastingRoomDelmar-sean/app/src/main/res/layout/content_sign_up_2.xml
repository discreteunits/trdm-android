<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.SignUpLoginActivity"
    tools:showIn="@layout/app_bar_sign_up_2"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_divider">

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:text="FIRST"
            android:textScaleX="0.9"
            android:textSize="25sp"
            android:textColor="@color/grayText"/>

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/et_mobile_num"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textScaleX="0.9"/>

    <View
        android:id="@+id/second_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/et_first_name"
        android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_divider"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:text="LAST"
            android:textScaleX="0.9"
            android:textSize="25sp"
            android:textColor="@color/grayText"/>
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_divider"
            android:layout_toRightOf="@+id/tv_mobile_num"
            android:layout_toEndOf="@+id/tv_mobile_num"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textScaleX="0.9"/>

        <View
            android:id="@+id/third_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_last_name"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_mobile_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_divider"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:text="MOBILE"
            android:textScaleX="0.9"
            android:textSize="25sp"
            android:textColor="@color/grayText"/>

        <EditText
            android:id="@+id/et_mobile_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_divider"
            android:layout_toRightOf="@+id/tv_mobile_num"
            android:layout_toEndOf="@+id/tv_mobile_num"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textScaleX="0.9"/>

        <View
            android:id="@+id/fourth_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_mobile_num"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_newsletter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fourth_divider"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/grayText"
            android:textSize="25sp"
            android:textScaleX="0.9"
            android:text="SIGN UP FOR OUR NEWSLETTER"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_newsletter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fourth_divider"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:buttonTint="@color/grayText"
            />

    </RelativeLayout>

    <View
        android:id="@+id/fifth_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_input"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
</RelativeLayout>
